@page
@model ControlEnvRazor.Pages.TaskManager.EditTaskModel
@{
    ViewData["Title"] = "Редактирование задания";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Редактирование задания</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="userTask.Id" />
            <div class="form-group">
                <label asp-for="userTask.TaskName" class="control-label"></label>
                <input asp-for="userTask.TaskName" class="form-control" />
                <span asp-validation-for="userTask.TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userTask.CommonDescription" class="control-label"></label>
                <input asp-for="userTask.CommonDescription" class="form-control" />
                <span asp-validation-for="userTask.CommonDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./ShowTasks">Вернуться</a>
</div>